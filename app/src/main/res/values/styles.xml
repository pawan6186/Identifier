<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="ResultTextView">@style/result_text_view</item>
    </style>

    <style name="result_text_view" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>
    <style name="action_button">

        <item name="android:background">@drawable/action_button_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
